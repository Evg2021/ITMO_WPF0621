<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab2_MVVM"
        xmlns:Properties="clr-namespace:Lab2_MVVM.Properties" x:Class="Lab2_MVVM.View.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="170" Width="400">
    <Grid Height="169">
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="12,12,0,0" Text="First name"/>
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="12,52,0,0" Text="Last name"/>
        <TextBox HorizontalAlignment="Left" VerticalAlignment="Top" Margin="90,9,0,0" Width="120" Text="{Binding People.FirstName, Mode=TwoWay}"/>
        <TextBox HorizontalAlignment="Left" VerticalAlignment="Top" Margin="90,49,0,0" Width="120" Text="{Binding People.LastName, Mode=TwoWay}">
            <TextBox.DataContext>
                <Properties:Resources/>
            </TextBox.DataContext>
        </TextBox>
        <Button Content="Click me" HorizontalAlignment="Left" Margin="291,97,0,0" VerticalAlignment="Top" Width="75" Command="{Binding ClickCommand}"/>
    </Grid>
</Window>
